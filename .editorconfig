# https://editorconfig.org/

root = true

[*]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

# Use 4 spaces for python files
[*.py]
indent_size = 4
# max_line_length = 79  # check with ruff

# Allow trailing whitespaces for breakline in markdown
[*.md]
trim_trailing_whitespace = false

# Allow trailing whitespaces for blank column in csv, tsv
[*.csv]
trim_trailing_whitespace = false
[*.tsv]
trim_trailing_whitespace = false

# Allow any indent size for JSON
[*.json]
indent_size = unset

# Ignore paths
# [/hoge/fuga/**]
# trim_trailing_whitespace = unset
# max_line_length = unset
